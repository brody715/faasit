{
  "name": "FaasIt",
  "scopeName": "source.faasit",
  "fileTypes": [
    "faasit"
  ],
  "repository": {
    "general": {
      "patterns": [
        {
          "include": "#linecomment"
        },
        {
          "include": "#blockcomment"
        },
        {
          "include": "#keyword"
        },
        {
          "include": "#string"
        },
        {
          "include": "#numeric"
        },
        {
          "include": "#builtin_type"
        }
      ]
    },
    "linecomment": {
      "name": "comment.line.double-dash.faasit",
      "begin": "(^[ \\t]+)?(?=//)",
      "end": "(?=$)"
    },
    "blockcomment": {
      "name": "comment.block.faasit",
      "begin": "/\\*(\\*)?(?!/)",
      "end": "\\*/"
    },
    "builtin_type": {
      "name": "entity.name.type",
      "match": "\\b(int|string|bool|type|map)\\b"
    },
    "keyword": {
      "name": "keyword.control.faasit",
      "match": "\\b(block|struct|import|extension|for)\\b"
    },
    "string": {
      "name": "string.quoted.double.faasit",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#escape"
        }
      ]
    },
    "escape": {
      "name": "constant.character.escape.faasit",
      "match": "\\\\."
    },
    "numeric": {
      "patterns": [
        {
          "include": "#integer"
        },
        {
          "include": "#float"
        }
      ],
      "name": "constant.numeric.faasit"
    },
    "integer": {
      "name": "constant.numeric.integer.faasit",
      "match": "\\b[0-9]+\\b"
    },
    "float": {
      "name": "constant.numeric.float.faasit",
      "match": "\\b[0-9]+\\.[0-9]+\\b"
    }
  },
  "patterns": [
    {
      "include": "#general"
    }
  ]
}
