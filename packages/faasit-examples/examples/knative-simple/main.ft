@event EchoEvent {
  type = "sample.echo"
  data = {
    status = string
    payload = any
  }
}

@function EchoFunction1 {
  runtime = "nodejs:16"
  codeDir = "./code"
  resource = {
    cpu = "1024m"
    memory = "128Mi"
  }
  pubsub = {
    events = [EchoEvent]
  }
}

@application KnativeSimple {
  functions = [EchoFunction1]
  defaultProvider = KnativeCluster1
}

@provider KnativeCluster1 {
  kind = "knative"
}
