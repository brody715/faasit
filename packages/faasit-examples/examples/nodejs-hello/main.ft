import (
  "github.com/faasit/restful"
)

@function hello {
  runtime = "nodejs:16"
  codeDir = "./code"
  triggers = [
    {
      name = "http"
      kind = "http"
      method = "get"
      path = "/"
    }
  ]
  resource = {
    cpu = "1024m"
    memory = "128Mi"
  }
}

@application {
  functions = [hello]
  defaultProvider = OpenFaasCluster1
}

@provider OpenFaasCluster1 {
  kind = "openfaas"
  gateway = "https://openfaas-ft.i2ec.top"
}
