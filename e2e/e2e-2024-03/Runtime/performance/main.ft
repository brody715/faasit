import (
  . "std/faas"
)

@function split {
  runtime = "nodejs"
}

@workflow WordCountFlow {
  // env.FAASIT_WORKFLOW_FUNC = split
  functions = [split]

  // workflow spec runtime
  runtime = "nodejs"
  codeDir = "."
}

@application WordCount {
  workflow = WordCountFlow
  defaultProvider = Local

  // used by `ft run`
  inputExamples = [
    {
      value = {
        filename = "text.txt"
      }
    }
  ]
}

@provider Local {
  kind = "local"
}

@provider Knative {
  kind = "knative"
}
